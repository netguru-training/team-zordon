%tr
  %td= habit.name
  %td= habit.description
  %td= habit.small_name
  %td= habit.small_description
  %td
    %ul
      - habit.name_days.each do |name|
        %li= name 
  %td= habit.active_name
  %td
    = link_to habit_path(habit) do
      %button.btn.btn-default
        %span.glyphicon.glyphicon-search
    = link_to edit_habit_path(habit) do
      %button.btn.btn-default
        %span.glyphicon.glyphicon-edit
    = link_to habit_path(habit, { method: :delete }) do
      %button.btn.btn-default
        %span.glyphicon.glyphicon-remove
